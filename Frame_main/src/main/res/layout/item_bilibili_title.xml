<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_entry_icon"
        android:layout_width="@dimen/dimen_15dp"
        android:layout_height="@dimen/dimen_15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/space" />

    <TextView
        android:id="@+id/tv_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_3dp"
        android:layout_toRightOf="@id/iv_entry_icon"
        android:textSize="@dimen/dimen_13sp"
        tools:text="推荐主播" />


    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_1dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/arrow_right" />

    <TextView
        android:id="@+id/tv_entry_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_arrow_right"
        android:textSize="@dimen/dimen_12sp"
        tools:text="当前---个直播" />

</RelativeLayout>
