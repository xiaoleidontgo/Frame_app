<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular LiveApi-level can go here. -->
        <!--<item name="android:listDivider">@drawable/default_line</item>-->
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- 启动页 引导页设置StatusBar为透明色 -->
    <style name="ColorTranslucentTheme" parent="@style/BaseAppTheme" />

    <!--主界面 设置Style-->
    <style name="MainActivityColorTranslucentTheme" parent="@style/BaseAppTheme"></style>

    <!--登录界面设置Style-->
    <style name="LoginActivityTheme" parent="@style/BaseAppTheme">
        <item name="android:windowAnimationStyle">@style/AnimActivityStyle</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--Theme Dialog style-->
    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080dp</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- activityOpenEnterAnimation // 进入新的Activity展示的动画
     activityOpenExitAnimation  // 销毁之前的Activity展示的动画
     activityCloseEnterAnimation  // 进入上一个Activity展示的动画
     activityCloseExitAnimation  // 关闭当前Activity时展示的动画-->
    <!--新进、旧出；旧进、新出-->
    <!--登录界面切换动画重写-->
    <style name="AnimActivityStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/no_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/out_from_top</item>
        <item name="android:activityCloseExitAnimation">@anim/no_anim</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
